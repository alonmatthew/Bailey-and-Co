<style media="screen">
  .avatar{
    width: 82%;
  }

  .center{
    margin: 0 auto;
  }

  .user-pic, .user-info{
    display: inline-block;
  }

  .user-about {
    margin-top: 3%;
  }
</style>
<div class="container">
<div class="row">
  <div class="well border-radius"><!-- User Info-->
    <div class="user-pic">
      <img src="/images/dog-no-pic.png" alt="" class="circle avatar">
    </div>
    <div class="user-info">
      <h1 class="user-name"><%= currentUser.local.name %></h1>
      <h3 class="user-city"><%= currentUser.local.city %></h3>
      <h6> Favorites | Reviews</h6>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-3 well border-radius"><!-- User Reviews-->
    <h2>Reviews</h2>
  </div>
  <div class="col-lg-9 well border-radius"><!-- User Favorites-->
    <h2>Favorites</h2>
  </div>
</div>
</div>
